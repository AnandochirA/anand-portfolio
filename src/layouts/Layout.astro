---
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Anandochir Amar – Portfolio</title>
    <meta name="description" content="Portfolio of Anandochir Amar – Developer, Engineer, and Creator." />
    <meta property="og:title" content="Anandochir Amar – Portfolio" />
    <meta property="og:description" content="Portfolio of Anandochir Amar – Developer, Engineer, and Creator." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://yourdomain.com" />
    <meta property="og:image" content="/og-image.png" />
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300 p-0 m-0">
    <slot name="navbar" />
    <main class="w-full px-4 py-8">
      <slot />
    </main>
    <slot name="footer" />
    <script>
      // Simple light/dark mode toggle
      const toggle = document.getElementById('theme-toggle');
      if (toggle) {
        toggle.onclick = () => {
          document.documentElement.classList.toggle('dark');
        };
      }
    </script>
  </body>
</html>